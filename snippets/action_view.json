{
  "`link_to(name, options, html_options, &block)`": {
    "prefix": "link_to",

    "body": ["link_to(${1:body}, ${2:url}, class: $3)"],

    "description": "[documentation](https://api.rubyonrails.org/classes/ActionView/Helpers/UrlHelper.html#method-i-link_to)"
  },
  "`link_to() with a block`": {
    "prefix": "link_to_block",

    "body": [
      "link_to(${1:url}, class: $2) do",
      "\t${3:body}",
      "end"
    ],

    "description": "[documentation](https://api.rubyonrails.org/classes/ActionView/Helpers/UrlHelper.html#method-i-link_to)"
  }
}
